<?xml version="1.0"?>
<openerp>
    <data>
        <template id="report.external_layout_invoice_commission_sol">
			<!-- Multicompany -->
			<t t-if="o and 'company_id' in o">
				<t t-set="company" t-value="o.company_id"></t>
			</t>
			<t t-if="not o or not 'company_id' in o">
				<t t-set="company" t-value="res_company"></t>
			</t>
		
			<t t-call="solum_invoice.external_layout_inv_commission_header_sol"/>
			<t t-raw="0" />
			<t t-call="solum_invoice.external_layout_inv_commission_footer_sol" />
		</template>

		<template id="external_layout_inv_commission_header_sol">
			<div class="header">
				<div class="col-xs-12 pull-left">
					<center><img src='/solum_sale/static/src/images/sol_luminaire.jpeg' style="width:300px;height:100px;"/></center>
				</div>
			</div>
		</template>

		<template id="external_layout_inv_commission_footer_sol">
			<div class="footer" style="font-family:Calibri; font-size:13px;">
				<div class="col-xs-12 pull-left" style="background-color: #FF8C00;">
					<br/>
					<center>
						<span>Sol Luminaire Pte Ltd</span><br/>
						<span>Showroom &amp; Office: Eunos avenue 7 Richfield Industrial centre Block 122 #07-10</span><br/>
						<span>tel: +65 6282 8020 | fax: +65 6282 8332 | www.solluminaire.com</span><br/>
					</center>
					<br/>
				</div>
			</div>
		</template>
        
    	<template id="sol_commission_invoice_report_template_id">
		    <t t-call="report.html_container">
		        <t t-foreach="docs" t-as="o">
		            <t t-call="report.external_layout_invoice_commission_sol">
		                <div class="page" style="font-family:Calibri; font-size:13px;">
		                    <table>
								<tr style="border:none; height:20px;">
									<td style="width:8cm; height:20px;"><b>Date</b></td>
									<td style="width:140cm; height:20px;">
										<b>:&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<span t-if="o.date_invoice" t-field="o.date_invoice"/></b>
									</td>
									<td style="width:14cm; height:20px;"><b>Invoice</b></td>
									<td style="width:40cm; height:20px;">
										<b>:&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<span t-if="o.number" t-field="o.number"/></b>
									</td>
								</tr>
								<tr style="border:none; height:20px;">
									<td style="width:8cm; height:20px;"><b>Company</b></td>
									<td style="width:140cm; height:20px;">
										<b>:&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<span t-if="o.partner_id" t-field="o.partner_id.name"/></b>
									</td>
									<td style="width:14cm; height:20px;"><b>Terms</b></td>
									<td style="width:40cm; height:20px;">
										<b>:&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<span t-if="o.payment_term_id" t-field="o.payment_term_id.name"/></b>
									</td>
								</tr>
								<tr style="border:none; height:20px;">
									<td style="width:8cm; height:20px;"><b>Project</b></td>
									<td style="width:140cm; height:20px;">
										<b>:&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<span t-if="o.sale_project_id" t-field="o.sale_project_id.name"/></b>
									</td>
									<td style="width:14cm; height:20px;"><b>Currency</b></td>
									<td style="width:40cm; height:20px;">
										<b>:&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<span t-if="o.currency_id" t-field="o.currency_id.name"/></b>
									</td>
								</tr>
								<tr style="border:none; height:20px;">
									<td style="width:8cm; height:20px;"><b>Attention</b></td>
									<td style="width:140cm; height:20px;">
										<b>:&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<span t-if="o.attention" t-field="o.attention"/></b>
									</td>
									<td style="width:14cm; height:20px;"><b>Prepared by</b></td>
									<td style="width:40cm; height:20px;">
										<b>:&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<span t-if="o.prepared_by" t-field="o.prepared_by.name"/></b>
									</td>
								</tr>
								<tr style="border:none; height:20px;">
									<td style="width:8cm; height:20px;"></td>
									<td style="width:140cm; height:20px;"></td>
									<td style="width:14cm; height:20px;"><b>Approved by</b></td>
									<td style="width:40cm; height:20px;">
										<b>:&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<span t-if="o.approved_by" t-field="o.approved_by.name"/></b>
									</td>
								</tr>
							</table>
							<br/><br/>
							<span style="font-size:25px;"><center><strong>INVOICE</strong></center></span>
							<br/>
							<table class="table table-condensed" t-if='o.inv_type == "led_strip"'>
								<thead>
								    <tr>
								        <th style="border-top:1px solid black;">ITEM</th>
								        <th style="border-top:1px solid black;">Product</th>
								        <th style="border-top:1px solid black;">AREA</th>
								        <th style="border-top:1px solid black;">LOCATION</th>
								        <th style="border-top:1px solid black;">UNIT PRICE</th>
								        <th style="border-top:1px solid black;">QTY</th>
								        <th style="border-top:1px solid black;">NETT PRICE</th>
								        <th style="border-top:1px solid black;">AMOUNT</th>
								    </tr>
							   </thead>
							   <tbody class="sale_tbody">
								    <t t-set="i" t-value="0" />
								    <tr t-foreach="o.invoice_line_ids" t-as="l">
								        <t t-set="i" t-value="i+1" />
								        <td>
								           <span t-esc="i"/>
								        </td>
								        <td>
								           <span t-if="l.product_id" t-field="l.product_id.name"/>
								        </td>
								        <td>
								           <span t-if="l.area_id" t-field="l.area_id.name"/>
								        </td>
								        <td>
								           <span t-if="l.product_location_id" t-field="l.product_location_id.name"/>
								        </td>
								        <td>
								           <span t-esc="'%.2f'% l.price_unit"/>
								        </td>
								        <td>
								           <span t-esc="int(l.quantity)"/> <span t-if="l.uom_id" t-field="l.uom_id.name"/>
								        </td>
								        <td>
								           <span t-esc="'%.2f'% l.price_subtotal"/>
								        </td>
								        <td>
								           <span t-esc="'%.2f'% l.price_subtotal"/>
								        </td>
								    </tr>
								</tbody>
							</table>
							
							<table class="table table-condensed" t-if='o.inv_type == "led_attach"'>
								<thead>
								    <tr>
								        <th style="border-top:1px solid black;">ITEM</th>
								        <th style="border-top:1px solid black;">MODEL</th>
								        <th style="border-top:1px solid black;">DESCRIPTION</th>
								        <th style="border-top:1px solid black;">QTY</th>
								        <th style="border-top:1px solid black;">UNIT PRICE</th>
								        <th style="border-top:1px solid black;">AMOUNT</th>
								    </tr>
							   	</thead>
							   	<tbody class="sale_tbody">
								    <t t-set="i" t-value="0" />
								    <tr t-foreach="o.invoice_line_ids" t-as="l">
								        <t t-set="i" t-value="i+1" />
								        <td>
								           <span t-esc="i"/>
								        </td>
								        <td>
								           <span t-if="l.product_id" t-field="l.product_id.name"/>
								        </td>
								        <td>
								           <span t-if="l.name" t-field="l.name"/>
								        </td>
								        <td>
								           <span t-esc="int(l.quantity)"/> <span t-if="l.uom_id" t-field="l.uom_id.name"/>
								        </td>
								        <td>
								           <span t-esc="'%.2f'% l.price_unit"/>
								        </td>
								        <td>
								           <span t-esc="'%.2f'% l.price_subtotal"/>
								        </td>
								    </tr>
								</tbody>
							</table>
							
							<br/><br/>
							<div class="col-xs-12" style="border-bottom:1px solid black;">
								<div class="col-xs-8">
									<table class="table table-condensed" style="border-top:none; margin-left:-35px;">
									    <tr style="border-top:none;" t-foreach="o.remarks_ids" t-as="r">
									        <td style="border-top:none;">
									            <span t-if="r.name" t-field="r.name.name"/>
									        </td>
									    </tr>
									</table>
								</div>
								<div class="col-xs-4 pull-right">
									<table class="table table-condensed" style="border-top:none;">
									    <tr style="border-top:none;">
									        <td style="border-top:none;"><strong>SUB-TOTAL</strong></td>
									        <td class="text-right" style="border-top:none;">
									            <span t-field="o.amount_untaxed"/>
									        </td>
									    </tr>
									    <tr style="border-top:none;">
									        <td style="border-top:none;"><strong>DISCOUNT</strong></td>
									        <td class="text-right" style="border-top:none;">
									            <span t-field="o.amount_discount"/>
									        </td>
									    </tr>
									    <tr style="border-top:none;">
									        <td style="border-top:none;"><strong>TAX</strong></td>
									        <td class="text-right" style="border-top:none;">
									            <span t-field="o.amount_tax"/>
									        </td>
									    </tr>
									    <tr style="border-top:none;">
									        <td style="border-top:none;"><strong>COMMISSION</strong></td>
									        <td class="text-right" style="border-top:none;">
									            <span t-field="o.amount_commission"/>
									        </td>
									    </tr>
									    <tr style="border-top:none;">
									        <td style="border-top:none;"><strong>GRAND TOTAL</strong></td>
									        <td class="text-right" style="border-top:none;">
									            <span t-field="o.amount_total"/>
									        </td>
									    </tr>
									</table>
								</div>
							</div>
							<span style="border-top:1px solid black; margin-top:100px; float: left"><b>CUSTOMER ACKNOWLEDGEMENT</b></span>
							<br/>
		                </div>
		            </t>
		        </t>
		    </t>
		</template>
   </data>
</openerp>
