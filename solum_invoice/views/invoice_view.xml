<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Inherit Customer Invoice view-->
    <record id="account_invoice_form_solum" model="ir.ui.view">
        <field name="name">account.invoice.form.solum</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <field name="team_id" position="after">
                <field name="inv_type"/>
            </field>
        </field>
    </record>
    
    <record id="action_led_strip_invoices" model="ir.actions.act_window">
            <field name="name">LED Strip Invoices</field>
            <field name="res_model">account.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph</field>
            <field name="domain">[('type','in',('out_invoice', 'out_refund')),('inv_type','=','led_strip')]</field>
            <field name="context">{'default_type':'out_invoice', 'default_journal_type': 'sale','default_inv_type':'led_strip'}</field>
        </record>
        
        <record id="action_invoice_tree_view_strip" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="account.invoice_tree"/>
            <field name="act_window_id" ref="action_led_strip_invoices"/>
        </record>

        <record id="action_invoice_form_view_strip" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account.invoice_form"/>
            <field name="act_window_id" ref="action_led_strip_invoices"/>
        </record>

    
    <record id="action_led_attach_invoices" model="ir.actions.act_window">
            <field name="name">LED Attachment Invoices</field>
            <field name="res_model">account.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph</field>
            <field name="domain">[('type','in',('out_invoice', 'out_refund')),('inv_type','=','led_attach')]</field>
            <field name="context">{'default_type':'out_invoice', 'default_journal_type': 'sale','default_inv_type':'led_attach'}</field>
        </record>
        
        <record id="action_invoice_tree_view_attach" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="account.invoice_tree"/>
            <field name="act_window_id" ref="action_led_attach_invoices"/>
        </record>

        <record id="action_invoice_form_view_attach" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account.invoice_form"/>
            <field name="act_window_id" ref="action_led_attach_invoices"/>
        </record>
    
    
    <menuitem id="led_strip_invoice_menu" 
              name="LED Strip Invoices"
              action="action_led_strip_invoices" 
              parent="account.menu_finance_receivables"/>
              
    <menuitem id="led_attach_invoice_menu" 
              name="LED Attachment Invoices" 
              action="action_led_attach_invoices" 
              parent="account.menu_finance_receivables"/>
              
     <!--Remove Customer Invoice Menu-->
    <delete model="ir.ui.menu" 
            search="[('name','=','Customer Invoices'),('parent_id','=',ref('account.menu_finance_receivables'))]"/>
    
</odoo>   
