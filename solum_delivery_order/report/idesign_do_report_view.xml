<?xml version="1.0"?>
<openerp>
    <data>
        <template id="report.external_layout_do_idesign">
			<!-- Multicompany -->
			<t t-if="o and 'company_id' in o">
				<t t-set="company" t-value="o.company_id"></t>
			</t>
			<t t-if="not o or not 'company_id' in o">
				<t t-set="company" t-value="res_company"></t>
			</t>
		
			<t t-call="solum_delivery_order.external_layout_do_header_idesign"/>
			<t t-raw="0" />
			<t t-call="solum_delivery_order.external_layout_do_footer_idesign" />
		</template>

		<template id="external_layout_do_header_idesign">
			<div class="header">
				<div class="col-xs-12 pull-left">
					<div class="col-xs-9 pull-left">
						<img src='/solum_delivery_order/static/src/images/idesign.jpeg' style="width:300px;height:80px; margin-left:-40px;"/>
					</div>
					<div class="col-xs-3 pull-right">
						<br/><br/><br/>
						<span style="float:right;">Reg.No..200701388M</span>
					</div>
				</div>
				
				<div class="col-xs-12 pull-left" style="border-bottom:1px solid black;">
					<span style="font-size: 12px;">SPACE PLANING</span>
					<span style="margin-left: 24px; font-size: 12px;">2D 3D DESIGN SOLUTIONS</span>
					<span style="margin-left: 24px; font-size: 12px;">INTERIOR DESIGN</span>
					<span style="margin-left: 24px; font-size: 12px;">RETAIL</span>
					<span style="margin-left: 24px; font-size: 12px;">COMMERCIAL</span>
					<span style="margin-left: 24px; font-size: 12px;">OFFICES</span>
					<span style="margin-left: 24px; font-size: 12px;">ARCHITECTURAL</span>
				</div>
			</div>
		</template>

		<template id="external_layout_do_footer_idesign">
			<div class="footer">
				<div class="col-xs-12 pull-left">
					<br/>
					<span style="border-top:1px solid black;">CUSTOMER ACKNOWLEDGEMENT</span>
					<br/>
					<br/>
					<span>Blk 122 Eunos Ave.7 Richfield Industrial Centre #07-10 (S) 409575</span>
					<span style="margin-left: 40px;">Tel : (+65) 62828020</span>
					<span style="margin-left: 40px;">Fax : (+65) 62828332</span>
				</div>
			</div>
		</template>
        
    	<template id="idesign_do_report_template_id">
		    <t t-call="report.html_container">
		        <t t-foreach="docs" t-as="o">
		            <t t-call="report.external_layout_do_idesign">
		                <div class="page">
		                    
		                    <table>
								<tr style="border:none; height:20px;">
									<td style="width:8cm; height:20px;"><b>Date</b></td>
									<td style="width:170cm; height:20px;">
										<b>:&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<sapn t-esc="o.get_formated_date(o.min_date)"/></b>
									</td>
								</tr>
								<tr style="border:none; height:20px;">
									<td style="width:8cm; height:20px;"><b>Company</b></td>
									<td style="width:170cm; height:20px;">
										<b>:&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<span t-if="o.partner_id" t-field="o.partner_id.name"/>
										<br/>
										&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<span t-if="o.partner_id.street" t-field="o.partner_id.street"/><br/>
										&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<span t-if="o.partner_id.city" t-field="o.partner_id.city"/> &amp;nbsp;&amp;nbsp;<span t-if="o.partner_id.zip" t-field="o.partner_id.zip"/><br/>
										&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<span t-if="o.partner_id.country_id" t-field="o.partner_id.country_id.name"/><br/>
										&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<span t-if="o.partner_id.phone" t-field="o.partner_id.phone"/>
										
								     	</b>
									</td>
								</tr>
							</table>
		                    
							<br/><br/>
							<span style="font-size:16px;"><center><strong>DELIVERY ORDER</strong></center></span>
							<br/>
							<table class="table table-condensed" t-if='o.delivery_type == "led_strip"'>
								<thead>
								    <tr>
								        <th style="border-top:1px solid black;">ITEM</th>
								        <th style="border-top:1px solid black;">AREA</th>
								        <th style="border-top:1px solid black;">LOCATION</th>
								        <th style="border-top:1px solid black;">LENGTH(MM)</th>
								        <th style="border-top:1px solid black;">QTY</th>
								    </tr>
							   </thead>
							   <tbody class="sale_tbody">
								    <t t-set="i" t-value="0" />
								    <tr t-foreach="o.get_order_line(o)" t-as="l">
								        <t t-set="i" t-value="i+1" />
								        <td>
								           <span t-esc="i"/>
								        </td>
								        <td>
								           <span t-if="l.product_id" t-field="l.product_id.name"/>
								        </td>
								        <td>
								           <span t-if="l.product_location_id" t-field="l.product_location_id.name"/>
								        </td>
								        <td>
								           <span t-field="l.length"/>
								        </td>
								        <td>
								           <span t-esc="int(l.product_uom_qty)"/>
								        </td>
								    </tr>
								</tbody>
							</table>
							
							<table class="table table-condensed" t-if='o.delivery_type == "led_attach"'>
								<thead>
								    <tr>
								        <th style="border-top:1px solid black;">ITEM</th>
								        <th style="border-top:1px solid black;">DESCRIPTION</th>
								        <th style="border-top:1px solid black;">QTY</th>
								    </tr>
							   </thead>
							   <tbody class="sale_tbody">
								    <t t-set="i" t-value="0" />
								    <tr t-foreach="o.get_order_line(o)" t-as="l">
								        <t t-set="i" t-value="i+1" />
								        <td>
								           <span t-esc="i"/>
								        </td>
								        <td>
								           <span t-if="l.product_id" t-field="l.product_id.name"/>
								        </td>
								        <td>
								           <span t-esc="int(l.product_uom_qty)"/>
								        </td>
								    </tr>
								</tbody>
							</table>
							
							<br/>
							<br/>
							<br/>
							<br/>
							<br/>
							<div class="col-xs-12 pull-left" style="border-bottom:2px solid black;">
								<table class="table table-condensed" style="border-top:none; margin-left:-15px;">
								    <tr style="border-top:none;" t-foreach="o.get_order_remarks(o)" t-as="r">
								        <td style="border-top:none;">
								            <span t-field="r.name"/>
								        </td>
								    </tr>
								</table>
								<span style="margin-left:-15px;">*Note all items are to be checked and verified on day of delivery.</span>
							</div>
							<br/>
							<br/>
							<br/>
							<span>Checked by:</span>
		                </div>
		            </t>
		        </t>
		    </t>
		</template>
   </data>
</openerp>
