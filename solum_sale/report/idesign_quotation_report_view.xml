<?xml version="1.0"?>
<openerp>
    <data>
        <template id="report.external_layout_quotation_idesign">
			<!-- Multicompany -->
			<t t-if="o and 'company_id' in o">
				<t t-set="company" t-value="o.company_id"></t>
			</t>
			<t t-if="not o or not 'company_id' in o">
				<t t-set="company" t-value="res_company"></t>
			</t>
		
			<t t-call="solum_sale.external_layout_header_idesign"/>
			<t t-raw="0" />
			<t t-call="solum_sale.external_layout_footer_idesign" />
		</template>

		<template id="external_layout_header_idesign">
			<div class="header" style="font-family:Calibri (Body); font-size:13px;">
				<div class="col-xs-12 pull-left">
					<div class="col-xs-9 pull-left">
						<img src='/solum_sale/static/src/images/idesign.jpeg' style="width:300px;height:80px; margin-left:-40px;"/>
					</div>
					<div class="col-xs-3 pull-right">
						<br/><br/><br/>
						<span style="float:right;"><b>Reg.No..200701388M</b></span>
					</div>
				</div>
				
				<div class="col-xs-12 pull-left" style="border-bottom:1px solid black;">
					<span style="font-size: 12px;"><b>SPACE PLANING</b></span>
					<span style="margin-left: 24px; font-size: 12px;"><b>2D 3D DESIGN SOLUTIONS</b></span>
					<span style="margin-left: 24px; font-size: 12px;"><b>INTERIOR DESIGN</b></span>
					<span style="margin-left: 24px; font-size: 12px;"><b>RETAIL</b></span>
					<span style="margin-left: 24px; font-size: 12px;"><b>COMMERCIAL</b></span>
					<span style="margin-left: 24px; font-size: 12px;"><b>OFFICES</b></span>
					<span style="margin-left: 24px; font-size: 12px;"><b>ARCHITECTURAL</b></span>
				</div>
			</div>
		</template>

		<template id="external_layout_footer_idesign">
			<div class="footer" style="font-family:Calibri (Body); font-size:13px;">
				<div class="col-xs-12 pull-left">
					<br/>
					<center>
						<span>Blk 122 Eunos Ave.7 Richfield Industrial Centre #07-10 (S) 409575</span>
						<span style="margin-left: 30px;">Tel : (+65) 62828020</span>
						<span style="margin-left: 30px;">Fax : (+65) 62828332</span>
					</center>
				</div>
			</div>
		</template>
        
    	<template id="idesign_quotation_report_template_id">
		    <t t-call="report.html_container">
		        <t t-foreach="docs" t-as="o">
		            <t t-call="report.external_layout_quotation_idesign">
		                <div class="page" style="font-family:Calibri (Body); font-size:13px;">
		                    <table>
								<tr style="border:none; height:20px;">
									<td style="width:8cm; height:20px;"><b>DATE</b></td>
									<td style="width:170cm; height:20px;">
										<b>:&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<sapn t-esc="o.get_formated_date(o.date_order)"/></b>
									</td>
									<td style="width:8cm; height:20px;"><b>QUOTATION</b></td>
									<td style="width:30cm; height:20px;">
										<b>:&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<span t-field="o.name"/></b>
									</td>
								</tr>
								<tr style="border:none; height:20px;">
									<td style="width:8cm; height:20px;"><b>ATTN</b></td>
									<td style="width:170cm; height:20px;">
										<b>:&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<span t-if="o.attention" t-field="o.attention"/></b>
									</td>
									<td style="width:8cm; height:20px;"><b>Currency</b></td>
									<td style="width:30cm; height:20px;">
										<b>:&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<span t-if="o.pricelist_id" t-field="o.pricelist_id.currency_id.name"/></b>
									</td>
								</tr>
								<tr style="border:none; height:20px;">
									<td style="width:8cm; height:20px;"><b>CUSTOMER</b></td>
									<td style="width:170cm; height:20px;">
										<b>:&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<span t-if="o.partner_id" t-field="o.partner_id.name"/>
										<br/>
										&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<span t-if="o.partner_id.street" t-field="o.partner_id.street"/><br/>
										&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<span t-if="o.partner_id.city" t-field="o.partner_id.city"/> &amp;nbsp;&amp;nbsp;<span t-if="o.partner_id.zip" t-field="o.partner_id.zip"/><br/>
										&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<span t-if="o.partner_id.country_id" t-field="o.partner_id.country_id.name"/><br/>
										&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<span t-if="o.partner_id.phone" t-field="o.partner_id.phone"/>
										
								     	</b>
									</td>
									<td style="width:8cm; height:20px;"><b>TERMS</b></td>
									<td style="width:30cm; height:20px;">
										<b>:&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;<span t-if="o.payment_term_id" t-field="o.payment_term_id.name"/></b>
									</td>
								</tr>
								
							</table>
							
							<br/><br/>
							<span style="font-size:25px;"><center><strong>QUOTATION</strong></center></span>
							<br/>
							
							<table class="table table-condensed">
								<thead>
								    <tr>
								        <th style="border-top:1px solid black;">ITEM</th>
								        <th style="border-top:1px solid black;">DESCRIPTION</th>
								        <th style="border-top:1px solid black;">COLOUR</th>
								        <th style="border-top:1px solid black;">QTY</th>
								        <th style="border-top:1px solid black;">UNIT PRICE</th>
								        <th style="border-top:1px solid black;">AMOUNT</th>
								    </tr>
							   </thead>
							   <tbody class="sale_tbody" style="font-weight: bold;">
								    <t t-set="i" t-value="0" />
								    <tr t-foreach="o.order_line" t-as="l">
								        <t t-set="i" t-value="i+1" />
								        <td>
								           <span t-esc="i"/>
								        </td>
								        <td>
								           <span t-if="l.name" t-field="l.name"/>
								        </td>
								        <td>
								           <span t-if="l.colour_id" t-field="l.colour_id.name"/>
								        </td>
								        <td>
								           <span t-esc="int(l.product_uom_qty)"/> <span t-if="l.product_uom" t-field="l.product_uom.name"/>
								        </td>
								        <td>
								           <span t-esc="'%.2f'% l.price_unit"/>
								        </td>
								        <td>
								           <span t-esc="'%.2f'% l.price_subtotal"/>
								        </td>
								    </tr>
								</tbody>
							</table>
							<div class="col-xs-12" style="border-top:1px solid black; margin-top: 30px;">
								<div class="col-xs-4 pull-right" style="height:109px;">
									<table class="table table-condensed" style="border-top:none;">
									    <tr style="border-top:none;">
									        <td style="border-top:none;"><strong>SUB-TOTAL</strong></td>
									        <td class="text-right" style="border-top:none; font-weight: bold;">
									            <span t-field="o.amount_untaxed"/>
									        </td>
									    </tr>
									    <tr style="border-top:none;">
									        <td style="border-top:none;"><strong>DISCOUNT</strong></td>
									        <td class="text-right" style="border-top:none; font-weight: bold;">
									            <span t-field="o.amount_discount"/>
									        </td>
									    </tr>
									    <tr style="border-top:none;">
									        <td style="border-top:none;"><strong>TAX</strong></td>
									        <td class="text-right" style="border-top:none; font-weight: bold;">
									            <span t-field="o.amount_tax"/>
									        </td>
									    </tr>
									    <tr style="border-top:none;">
									        <td style="border-top:none;"><strong>GRAND TOTAL</strong></td>
									        <td class="text-right" style="border-top:none; font-weight: bold;">
									            <span t-if="o.currency_id" t-field="o.currency_id.symbol"/> 
									            <span t-esc="'%.2f'%(o.amount_untaxed+o.amount_tax-o.amount_discount)"/>
									        </td>
									    </tr>
									</table>
								</div>
							</div>
							<b><span style="margin-top: 30px;">SGD:</span> <span t-esc="o.convert((o.amount_untaxed+o.amount_tax-o.amount_discount),'SGD')"/></b><br/><br/>
							
							<span style="margin-top: 30px;"><b>TERMS OF PAYMENT: </b></span><br/>
							<div class="col-xs-12">
								<div class="col-xs-8">
									<table class="table table-condensed" style="border-top:none; margin-left:-35px;">
									    <t t-set="i" t-value="0" />
									    <tr style="border-top:none;" t-foreach="o.remarks_ids" t-as="r">
									        <t t-set="i" t-value="i+1" />
									        <td style="border-top:none; font-weight: bold;">
									           <span t-esc="i"/>. <span t-if="r.name" t-field="r.name.name"/>
									        </td>
									    </tr>
									</table>
								</div>
							</div>
							<span style="float: left; margin-top: 30px;"><b>If the mention above is agreeable, please kindly sign and stamp and return the duplicate copy of this quotation and send back to us</b></span>
							<span style="float: left; margin-top: 30px;"><b>Agreed &amp; accept by:</b></span>
							
							<div class="col-xs-12" style="margin-top: 100px;">
								<div class="col-xs-9">
							           <b><span style="border-top:1px solid black; margin-left: -35px;">NIKE GLOBAL TRADING B.V. SINGAPORE BRANCH</span></b>
								</div>
								<div class="col-xs-3 pull-right">
							           <b><span style="border-top:1px solid black;"> IDESIGNLINE PTE LTD</span></b>
								</div>
							</div>
		                </div>
		            </t>
		        </t>
		    </t>
		</template>
   </data>
</openerp>
