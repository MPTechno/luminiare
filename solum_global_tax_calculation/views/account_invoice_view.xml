<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="tax_account_invoice_view_form_strip" model="ir.ui.view">
            <field name="name">tax.account.invoice.strip</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="sale_discount_total.discount_account_invoice_view_form_strip"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='discount_rate']" position="after">
                    <div name="tax_rate">
                        <label for="tax_rate" string="Tax Rate :"/>
                        <field name="tax_rate" class="oe_inline"/>
                    </div>
                </xpath>
            </field>
        </record>
        
        <record id="tax_account_invoice_view_form_attachment" model="ir.ui.view">
            <field name="name">tax.account.invoice.attachment</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="sale_discount_total.discount_account_invoice_view_form_attachment"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='discount_rate']" position="after">
                    <div name="tax_rate">
                        <label for="tax_rate" string="Tax Rate :"/>
                        <field name="tax_rate" class="oe_inline"/>
                    </div>
                </xpath>
            </field>
        </record>
        
        <record id="tax_account_invoice_view_form_idesign" model="ir.ui.view">
            <field name="name">tax.account.invoice.idesign</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="sale_discount_total.discount_account_invoice_view_form_idesign"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='discount_rate']" position="after">
                    <div name="tax_rate">
                        <label for="tax_rate" string="Tax Rate :"/>
                        <field name="tax_rate" class="oe_inline"/>
                    </div>
                </xpath>
            </field>
        </record>
        
        
    </data>
</odoo>
